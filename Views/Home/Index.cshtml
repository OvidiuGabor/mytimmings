<div class="form-container">
    <div class="information-box-form">
        <p>Please login using your email address or the personal login id that has been provided to you.</p>
        <p>If you dont have an account created, Please contact your <strong>Supervisor</strong> in order to have one created.</p>
    </div>
    @using (Html.BeginForm("UserLogin", "Home"))
    {
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="text" class="form-control" id="loginID"  name="loginID" placeholder="Enter Login Credentials">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="loginPassword" name="loginPassword" placeholder="Password">
        </div>
        <input type="hidden" id="timezone" name="timezone"/>
       
                if (Session["errorMessage"] != null)
                {
                    string errorMessage = Session["errorMessage"].ToString();
                    <span class="login-error-message">@errorMessage</span>

                }
        
        <button type="submit" class="btn btn-primary">Submit</button>
    }

</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {

        var offset = new Date().getTimezoneOffset();

        console.log(offset);

       document.getElementById("timezone").value = offset


    })
</script>