<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="overtime-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Overtime Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="overtimeForm">
                    <input type="hidden" value="Overtime" id="Type" name="Type"/>
                    <div>
                        <div class="form-group" style="display: inline-block">
                            <label for="request-date" class="col-form-label">Date</label>
                            <input type="date" class="form-control" id="StartDate" name="StartDate">
                        </div>
                        <div class="form-group" style="display: inline-block">
                            <label for="start-time" class="col-form-label">StartTime</label>
                            <input type="time" class="form-control" id="StartTime" name="StartTime">
                        </div>
                        <div class="form-group" style="display: inline-block">
                            <label for="Duration" class="col-form-label">Duration</label>
                            <input type="time" class="form-control" id="Duration" name="Duration">
                        </div>
                    </div>
                    <div class="form-group" style="display: inline-block">
                        <label for="project" class="col-form-label">ProjectId</label>
                        <select id="project" class="form-control" name="ProjectId"></select>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Comments</label>
                        <textarea class="form-control" id="message-text" name="Comments"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="SubmitForm()">Send</button>
            </div>
        </div>
    </div>
</div>

<script>
    //this function handle the submit for and fetch the retun from the controller
    function SubmitForm() {
        var xhr = new XMLHttpRequest();
        xhr.open("Post", "@Url.Action("OvertimeRequest", "Portal")")
        xhr.onload = function (event) {
            console.log(event.target.response);
        }

        var formData = new FormData(document.getElementById("overtimeForm"));
        console.log(formData)
        xhr.send(formData)
    }

</script>