@model IEnumerable<mytimmings.Models.Portal.CalendarRecord>




<link href="~/fullcalendar/lib/main.css" rel="stylesheet" />
<script src="~/fullcalendar/lib/main.js"></script>
@Styles.Render("~/Portal/css")


<style>
    #external-events {
        position: fixed;
        margin-top: 68px;
        z-index: 2;
        width: 150px;
        padding: 0 10px;
