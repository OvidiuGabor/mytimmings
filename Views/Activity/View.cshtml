@model mytimmings.Models.Activity.MyActivity

<div lass="w3-container conainer-padding" style="padding-top: 10px">
    <div class="container-fluid">
        <div class="row" style="padding-top: 10px; margin-left: 0px">
            <div class="col-md-3">

            </div>
            <div class="col-md-9">
                <table class="table">
                    <tr>
                        <th>
                            start
                        </th>
                        <th>
                            end
                        </th>
                        <th>
                            requestdate
                        </th>
                        <th>
                            status
                        </th>
                        <th>
                            type
                        </th>
                        <th>
                            days
                        </th>
                    </tr>

                    @foreach (var item in Model.leaves)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.start)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.end)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.requestDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numberofDays)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>

</div>