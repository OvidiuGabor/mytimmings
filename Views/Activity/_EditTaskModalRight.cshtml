
<div id="modal-right-edit" class="modal fade" data-backdrop="true">
    <div class="modal-dialog modal-right w-xl">
        <div class="modal-content h-100 no-radius" style="overflow: auto">
            <div class="modal-header">

                <div class="modal-title text-md" id="modal-title">Edit Existing Task</div>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="p-4 text-center">
                    <form id="edit-task" class="needs-validation" novalidate>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="dateInput">Date</label>
                                <input type="date" class="form-control" id="edit-dateInput" placeholder="Task Date" style="text-align: center" required disabled>
                                <div class="invalid-feedback">
                                    Please select a date!
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="starttime">Start Time</label>
                                <input type="time" class="form-control" id="edit-startTime" placeholder="Start Time" required>
                                <div class="invalid-feedback">
                                    Please select Start Time!
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="endTime">End Time</label>
                                <input type="time" class="form-control" id="edit-endTime" placeholder="End Time" required>
                                <div class="invalid-feedback">
                                    Please select End Time!
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="title">Task Title</label>
                                <input type="text" class="form-control" id="edit-title" placeholder="Title" required>
                                <div class="invalid-feedback">
                                    Please add Title!
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="project">Project</label>
                                <select id="project" class="form-control" required>
                                    <option selected value="1">MyTimmings</option>
                                    <option value="2">Other</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select an Project!
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="status">Status</label>
                                <select id="edit-status" class="form-control" required>
                                    <option selected value="On Duty">On Duty</option>
                                    <option value="Break">Break</option>
                                    <option value="Overtime">Overtime</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select an Status!
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="tags">Tags</label>
                                <input type="text" class="form-control" id="tags" placeholder="Tags">
                            </div>
                        </div>
                        <div class="row" id="edit-tags-container">

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="details">Details</label>
                                <textarea id="edit-details" cols="55" rows="15" required></textarea>
                                <div class="invalid-feedback">
                                    Please Add a short Description!
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="DeleteItem()">Delete</button>
                <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="submitData()">Save Details</button>

            </div>
        </div>
    </div>
</div>
